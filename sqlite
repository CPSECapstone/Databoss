import sqlite3

conn = sqlite3.connect('database.db')
c = conn.cursor()

def createTable():
    c.execute('''CREATE TABLE filepaths
                  (path text)''')
    c.commit()

def addPath(pathName):
    p = (pathName,)
    c.execute('INSERT INTO filepaths VALUES (?)', p)
    c.execute('SELECT ?', pathName)
    row = c.fetchone()
    assert row[0] == pathName
    c.commit()

def closeConn():
    conn.close()